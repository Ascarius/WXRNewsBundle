{% extends 'WXRCommonBundle::layout.html.twig' %}

{% import 'WXRNewsBundle::news_macros.html.twig' as news %}

{##
 # @param WXR\NewsBundle\Model\TagInterface tag
 # @param WXR\NewsBundle\Model\PostInterface[] posts
 # @param integer postCount
 # @param integer page
 # @param integer pageCount
 #}

{% block title %}{{ 'layout.news'|trans({}, 'WXRNewsBundle') }} - {{ parent() }}{% endblock %}

{% block content %}

    <div class="btn-toolbar">
        <a href="{{ path('wxr_news_post_list') }}" class="btn"><i class="icon-list"></i> {{ 'posts'|trans({}, 'WXRNewsBundle') }}</a>
    </div>

    <div class="page-header">
        <h1>{{ 'layout.news'|trans({}, 'WXRNewsBundle') }} | {{ tag.name }}</h1>
    </div>

    {{ news.posts_list(posts) }}

    {{ news.pagination(page, pageCount, { slug: tag.slug }) }}

{% endblock %}
